# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                             controllers.Application.index

GET         /export/desks/:pointInTime/:terminalName      controllers.Application.getDesksAndQueuesCSVAtPointInTime(pointInTime, terminalName)
GET         /export/arrivals/:pointInTime/:terminalName   controllers.Application.getFlightsWithSplitsAtPointInTimeCSV(pointInTime, terminalName)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/fonts/*file                           controllers.Assets.at(path="/public/lib/font-awesome/fonts", file)
GET         /assets/images/*file                          controllers.Assets.at(path="/public/images", file)
GET         /assets/*file                                 controllers.Assets.versioned(path="/public", file: Asset)

# Autowire calls
POST        /api/*path                                    controllers.Application.autowireApi(path: String)

# Logging
POST        /logging                                      controllers.Application.logging


POST        /data/staff                                   controllers.Data.saveStaff

